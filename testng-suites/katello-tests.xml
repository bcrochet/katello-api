<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Katello API Test Suite">

	<!-- the hudson.groovy script already includes these listeners
	<listeners>
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />
  		<listener class-name="com.redhat.qe.auto.bugzilla.BugzillaTestNGListener" />
	</listeners>
	-->
	
	<test name="Smoke_Tests" preserve-order="true">
		<classes>
			<class name="com.redhat.qe.katello.tests.api.EnvironmentsTest"/>
			<class name="com.redhat.qe.katello.tests.api.ProvidersTest"/>	
			<class name="com.redhat.qe.katello.tests.api.UsersTest"/>
		</classes>
	</test>
	
	<test name="CLI_Tests" preserve-order="true">
		<classes>
			<class name="com.redhat.qe.katello.tests.cli.SystemTests"/>
			<class name="com.redhat.qe.katello.tests.cli.OrgTests"/>
			<class name="com.redhat.qe.katello.tests.cli.ProviderTests"/>
			<class name="com.redhat.qe.katello.tests.cli.ProductTests"/>
			<class name="com.redhat.qe.katello.tests.cli.ActivationKeyTests"/>
			<class name="com.redhat.qe.katello.tests.cli.UserTests"/>
		</classes>
	</test>
	
	<test name="E2E_Tests" preserve-order="true">
		<classes>
			<class name="com.redhat.qe.katello.tests.e2e.BPMTests"/>
			<class name="com.redhat.qe.katello.tests.e2e.PackagesWithGPGKey"/>
			<class name="com.redhat.qe.katello.tests.e2e.PromoteErrata"/>
			<class name="com.redhat.qe.katello.tests.e2e.SystemsReport"/>
			<class name="com.redhat.qe.katello.tests.e2e.RhsmOnlyPermissions"/>
		</classes>
	</test>
	
	<test name="Longrun_Tests" preserve-order="true">
		<classes>
			<class name="com.redhat.qe.katello.tests.e2e.TdlExportFedora"/>
			<class name="com.redhat.qe.katello.tests.e2e.TdlExportRhel"/>
		</classes>
	</test>
</suite>
